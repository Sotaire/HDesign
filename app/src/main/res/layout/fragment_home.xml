<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:scaleType="centerCrop"
            android:background="@drawable/background"
            app:layout_constraintBottom_toTopOf="@id/frame"
            app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="30dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="40dp"/>
                <ImageView
                        android:id="@+id/avatar"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="40dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:src="@drawable/avatar"
                    app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="2dp"
                android:text="Sotaire"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:typeface="monospace"
                app:layout_constraintTop_toBottomOf="@id/avatar"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/nick"
                android:text="'@'mail some"
                android:textColor="@color/nickname"/>

            <TextView
                android:id="@+id/num1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/frame"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/num2"
                android:text="2318"
                android:textColor="@color/white"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/num2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/frame"
                app:layout_constraintLeft_toRightOf="@id/num1"
                app:layout_constraintRight_toLeftOf="@id/num3"
                android:text="364"
                android:textColor="@color/white"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/num3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/frame"
                app:layout_constraintLeft_toRightOf="@id/num2"
                app:layout_constraintRight_toRightOf="parent"
                android:text="175"
                android:textColor="@color/white"
                android:textSize="16sp"/>

            <TextView
                android:layout_marginLeft="18dp"
                android:id="@+id/text1"
                app:layout_constraintBottom_toTopOf="@id/num1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/text2"
                android:text="Friends"
                style="@style/text"/>

            <TextView
                android:id="@+id/text2"
                app:layout_constraintBottom_toTopOf="@id/num2"
                app:layout_constraintLeft_toRightOf="@id/text1"
                app:layout_constraintRight_toLeftOf="@id/text3"
                android:text="Following"
                style="@style/text"/>

            <TextView
                android:id="@+id/text3"
                app:layout_constraintBottom_toTopOf="@id/num3"
                app:layout_constraintLeft_toRightOf="@id/text2"
                app:layout_constraintRight_toRightOf="parent"
                android:text="Follows"
                style="@style/text"/>



        <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/frame"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="300dp"/>

            <ImageView
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/picture2"
                app:layout_constraintBottom_toTopOf="@id/picture6"
                app:layout_constraintTop_toBottomOf="@id/frame"
                android:id="@+id/picture1"
                style="@style/Image" />

            <ImageView
                app:layout_constraintRight_toLeftOf="@id/picture3"
                app:layout_constraintLeft_toRightOf="@id/picture1"
                app:layout_constraintBottom_toTopOf="@id/picture5"
                app:layout_constraintTop_toBottomOf="@id/frame"
                android:id="@+id/picture2"
                style="@style/Image" />

            <ImageView
                app:layout_constraintLeft_toRightOf="@id/picture2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/picture4"
                app:layout_constraintTop_toBottomOf="@id/frame"
                android:id="@+id/picture3"
                style="@style/Image" />


            <ImageView
                app:layout_constraintLeft_toRightOf="@id/picture5"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/picture7"
                app:layout_constraintTop_toBottomOf="@id/picture3"
                android:id="@+id/picture4"
                style="@style/Image" />

            <ImageView
                app:layout_constraintRight_toLeftOf="@id/picture4"
                app:layout_constraintLeft_toRightOf="@id/picture6"
                app:layout_constraintBottom_toTopOf="@id/picture8"
                app:layout_constraintTop_toBottomOf="@id/picture2"
                android:id="@+id/picture5"
                style="@style/Image" />

            <ImageView
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/picture5"
                app:layout_constraintBottom_toTopOf="@id/picture9"
                app:layout_constraintTop_toBottomOf="@id/picture1"
                android:id="@+id/picture6"
                style="@style/Image" />


            <ImageView
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/picture8"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/picture4"
                android:id="@+id/picture7"
                style="@style/Image" />

            <ImageView
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/picture9"
                app:layout_constraintRight_toLeftOf="@id/picture7"
                app:layout_constraintTop_toBottomOf="@id/picture5"
                android:id="@+id/picture8"
                style="@style/Image" />

            <ImageView
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/picture8"
                app:layout_constraintTop_toBottomOf="@id/picture6"
                android:id="@+id/picture9"
                style="@style/Image" />

</androidx.constraintlayout.widget.ConstraintLayout>